<launch>
  <!-- No namespace here as we will share this description. 
       Access with slash at the beginning -->

<param name="robot_description"
    command="$(find xacro)/xacro.py $(find ackermann_vehicle_description)/urdf/em_3905.urdf.xacro" />

  <!-- BEGIN ROBOT 1-->
  <group ns="robot1">
    <param name="tf_prefix" value="robot1_tf" />
    <include file="$(find ackermann_vehicle_gazebo)/launch/one_robot1.launch" >
      <arg name="x" value="-2" />
      <arg name="namespace"  value="Robot1" />
    </include>
  </group>

  <!-- BEGIN ROBOT 2-->
  <group ns="robot2">
    <param name="tf_prefix" value="robot2_tf" />
    <include file="$(find ackermann_vehicle_gazebo)/launch/one_robot1.launch" >
      <arg name="x" value="-1" />
      <arg name="namespace"  value="Robot2" />
    </include>
  </group>
<!-- BEGIN ROBOT 3-->
    <include file="$(find ackermann_vehicle_gazebo)/launch/ackermann_vehicle.launch"/>

</launch>
